<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#d0c1a8"
        android:textColor="#ffffff"
        android:orientation="horizontal"  >

        <TextView
            android:id="@+id/zhuc"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/zhuc_f"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
         	android:layout_marginLeft="85dp"
         	android:layout_marginTop="3dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>
    	<ImageView 
    android:layout_width="132dp"
    android:layout_height="132dp"
    android:src="@drawable/login_logo"
    android:layout_gravity="center_horizontal"
    android:id="@+id/imglogin_logo"
    android:layout_marginTop="25dp"
    
      />
    
		    	 <EditText
		         android:id="@+id/ETusername"
		         android:layout_width="match_parent"
		         android:layout_height="46dp"
		         android:layout_gravity="center"
		         android:gravity="center_vertical"
		    	 android:layout_marginTop="40dp"
		         android:adjustViewBounds="true"
		         android:paddingLeft="15dp"
		         android:hint="请输入用户名" 
		         android:background="@drawable/setbar_bg"
		         
		         />
		     
		
		      <EditText
		         android:id="@+id/ETpwd"
		         android:layout_width="match_parent"
		         android:layout_height="46dp"
		         android:layout_gravity="center"
		         android:gravity="center_vertical"
		         android:adjustViewBounds="true"
		         android:paddingLeft="15dp"
		         android:hint="请输入密码" 
		         android:background="@drawable/setbar_bg"
		         
		         />
		         <EditText
		         android:id="@+id/ETpwdok"
		         android:layout_width="match_parent"
		         android:layout_height="46dp"
		         android:layout_gravity="center"
		         android:gravity="center_vertical"
		         android:adjustViewBounds="true"
		         android:paddingLeft="15dp"
		         android:hint="请输入再次输入密码" 
		         android:background="@drawable/setbar_bg"
		         
		         />
		         <Button 
		             android:layout_width="350dp"
		             android:layout_height="40dp"
		             android:layout_marginTop="10dp"
		             android:layout_gravity="center_horizontal"
		             android:background="#ede9e1"
		             android:id="@+id/btnregister"
		             android:text="确认注册"
		             />
		         <LinearLayout 
		                android:layout_width="match_parent"
				        android:layout_height="45dp"
				        android:orientation="horizontal" 

		             >
		              <TextView 
		             android:layout_width="120dp"
		             android:layout_height="46dp"
		             android:layout_marginLeft="23dp"
		             android:textSize="16sp"
		             android:text="注册代表你同意"
		             />
		         <Button
		             android:layout_width="wrap_content"
		             android:layout_height="46dp"
		             
		             android:background="#00000000"
		             android:textColor="#1390c7"
		             android:text="家庭理财通注册协议"
		             />
		             
		         </LinearLayout>
		        

</LinearLayout>

